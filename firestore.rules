rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      // Allow signed-in users to write to their own user doc
      allow create: if request.auth != null;

      // Only admins can read users collection
      allow read: if request.auth != null && request.auth.uid == userId || isAdmin();

      // Builds subcollection under each user
      match /builds/{buildId} {
        // Only allow reading and writing if user is logged in
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // CPUs Collection
    match /cpus/{cpuId} {
      allow read: if true; // Read access for everyone
      allow write: if isAdmin(); // Only admins can write
    }

    // GPUs Collection
    match /gpus/{gpuId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // RAM Collection
    match /ram/{ramId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Helper function to check if user is admin
    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return request.auth != null &&
            userDoc.exists() &&
            userDoc.data.role == "admin";
    }
  }
}